<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailedActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">


        <ImageView
        android:id="@+id/DeatailedCryptoCurrencyimageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:srcCompat="@android:drawable/screen_background_light_transparent"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DetailedcurrentPriceTextView"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/DetailedPriceAlertTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/DetailedPriceChangedTextView"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/DetailedMarkedCapTextView"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="TextView" />

            <Button
                android:id="@+id/DetailedViewBackButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:background="@drawable/round_buttons"
                android:text="Back"
                android:textColor="@color/white"
                app:backgroundTint="@color/blueTheme" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>







