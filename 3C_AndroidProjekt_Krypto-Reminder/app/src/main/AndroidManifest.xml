<?xml version="1.0" encoding="utf-8"?><manifest xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
package="rafaelp.gt.a3c_androidprojekt_krypto_reminder">

<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
<uses-permission android:name="android.permission.INTERNET" />

<application
    android:name="Activities.NotificationsActivity"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.3C_AndroidPorjekt_KryptoReminder"
    android:usesCleartextTraffic="true"
    android:appComponentFactory="@string/app_name"
    tools:replace="android:appComponentFactory">

    <activity android:name=".DetailedActivity"></activity>
    <activity android:name="Activities.MainActivity">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
    <activity android:name="Activities.TransactionActivity" />
    <activity android:name="Activities.AddAlertActivity" />
    <activity android:name="Activities.ConverterActivity" />
    <activity android:name="Activities.SettingsActivity" />
    <activity android:name="Activities.AddTransactionActivity" />
    <service android:name=".AlertService" />
</application>

</manifest>



